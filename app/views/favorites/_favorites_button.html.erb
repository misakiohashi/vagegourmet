      
<% if current_user.favorite?(restaurant) %>
    <%= form_with(model: current_user.favorites.find_by(restaurant_id: restaurant.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag "restaurant_id", restaurant.id, id: "restaurant_#{restaurant.id}" %>
    <%= f.submit '☆行きたい登録済み', class: 'unfavorite-btn btn-block',style: "background-color:#CCCCCC;" %>
    <% end %>
<% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag "restaurant_id", restaurant.id, id: "restaurant_#{restaurant.id}" %>
    <%= f.submit '☆行きたい', class: 'favorite-btn btn-block' %>
    <% end %>
<% end %>
        