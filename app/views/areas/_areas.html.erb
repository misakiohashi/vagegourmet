<div class="region">
<% prefecture.areas.order(id: :asc).each do |area| %>
    <div class="region-name"><%= area.name %></div>
         <ul class="list-unstyled">
            <% area.cities.order(id: :asc).each do |city| %>
                <li>
                  <div class="region-element">
                    <%= link_to city.name, city_path(city) %>
                  </div>
                </li>
            <% end %>
         </ul>
<% end %>
</div>




